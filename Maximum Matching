int l[N] , r[N];
bool vis[N];
bool match(int node) {
    if(vis[node])
        return false;
    vis[node] = true;
    for(auto &i : g[node])
        if(l[i] == -1 || match(l[i])) {
            l[i] = node , l[node] = i;
            return true;
        }
    return false;
}

memset(l , -1 , sizeof l);
memset(r , -1 , sizeof r);
int ans = n;
for(int i = 0;i < n;i++) {
   memset(vis , 0 , sizeof vis);
   ans -= match(i);
}
